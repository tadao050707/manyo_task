<h1>タスク一覧</h1>
<table>
  <tr>
    <th>タスク名</th>
    <th>詳細</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= link_to '修正', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete %></td>
  </tr>
<% end %>
<%= link_to '登録', new_task_path %>
</table>